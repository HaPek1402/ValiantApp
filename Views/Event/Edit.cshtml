@using ValiantApp.Data;
@using ValiantApp.ViewModel
@model EditEventVM


<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" value="AddressId" id="AddressId" />
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Title">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Desc">Desc</label>
        <input asp-for="Desc" class="form-control" placeholder="Description">
        <span asp-validation-for="Desc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="eventCategory">Event Tags</label>
        <select asp-for="eventCategory" asp-items="@Html.GetEnumSelectList<EventCategory>()" class="form-control">
            <option selected="selected" value="">--Select--</option>
        </select>
        <span asp-validation-for="eventCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>